generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Categorie {
  ALIMENTAIRE
  CHIMIQUE
  AGRICOLE
}

model Produit {
  id            Int       @id @default(autoincrement())
  libelle       String
  categorie     Categorie @default(ALIMENTAIRE)
  prix          Int
  quantiteStock Int
  datePeremption DateTime
  image         String?
  stockmin      Int @default(5)
}
